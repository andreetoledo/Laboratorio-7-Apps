<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.CC3055.andreetoledo.laboratorio_5.CreateContact" android:background="@color/colorAccent">

    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crear_cont"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:src="@tools:sample/avatars[2]"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/name"
            android:contentDescription="TODO"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back" app:layout_constraintEnd_toStartOf="@+id/crear_cont" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.336"/>
    <EditText
            android:layout_width="223dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:hint="Nombre:"
            android:ems="10"
            android:id="@+id/name" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="9dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="9dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/phone" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.862"
            android:background="@color/colorPrimary" app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:hint="Telefono:"
            android:ems="10"
            android:id="@+id/phone" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/mail" android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="224dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:hint="E-mail:"
            android:ems="10"
            android:id="@+id/mail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.516" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/back" android:background="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>